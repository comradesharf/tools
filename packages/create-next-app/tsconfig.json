{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "module": "ES2022",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "template"]
}
